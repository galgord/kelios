generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatarUrl String?
  jobTitle  String?
  company   String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events Event[]

  @@map("users")
}

model Event {
  id               String   @id @default(uuid())
  organizerId      String
  title            String
  description      String   @db.Text
  date             DateTime
  price            Float
  venue            String
  stripeAccountId  String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  organizer User @relation(fields: [organizerId], references: [id])

  @@map("events")
}
